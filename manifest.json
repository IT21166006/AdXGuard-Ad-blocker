{
    "manifest_version": 3,
    "name": "AdXGuard",
    "description": "Advanced ad blocker with modern interface and premium features.",
    "version": "1.0",
    "permissions": [
      "declarativeNetRequest",
      "declarativeNetRequestFeedback",
      "storage",
      "tabs",
      "proxy"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "AdXGuard - Ad Blocker",
      "default_icon": {
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "ruleset_1",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    },
    "web_accessible_resources": [
      {
        "resources": ["custom-block.html", "vpn.html", "popup.html", "premium.html", "premium-success.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  